{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "Event Details",
      "weight": "Bolder",
      "size": "ExtraLarge"
    },
    {
      "type": "RichTextBlock",
      "inlines": [
        {
          "type": "TextRun",
          "text": "Name: ",
          "weight": "Bolder"
        },
        {
          "type": "TextRun",
          "text": "${eventName}"
        }
      ]
    },
    {
      "type": "RichTextBlock",
      "inlines": [
        {
          "type": "TextRun",
          "text": "Description: ",
          "weight": "Bolder"
        },
        {
          "type": "TextRun",
          "text": "${eventDesc}"
        }
      ]
    },

    {
      "type": "RichTextBlock",
      "inlines": [
        {
          "type": "TextRun",
          "text": "Location: ",
          "weight": "Bolder"
        },
        {
          "type": "TextRun",
          "text": "${eventLocation}"
        }
      ]
    },
    {
      "type": "RichTextBlock",
      "inlines": [
        {
          "type": "TextRun",
          "text": "Organiser: ",
          "weight": "Bolder"
        },
        {
          "type": "TextRun",
          "text": "${organiser}"
        }
      ]
    },

    {
      "type": "RichTextBlock",
      "inlines": [
        {
          "type": "TextRun",
          "text": "Date: ",
          "weight": "Bolder"
        },
        {
          "type": "TextRun",
          "text": "${eventDate}"
        }
      ]
    },

    {
      "type": "Image",
      "url": "${imageData}",
      "size": "large",
      "height": "250px",
      "horizontalAlignment": "center"
    }
  ]
}
