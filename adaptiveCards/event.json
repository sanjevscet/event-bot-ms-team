{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "Event Details",
      "weight": "Bolder",
      "size": "Large"
    },
    {
      "type": "TextBlock",
      "text": "Event Name:",
      "weight": "Bolder"
    },
    {
      "type": "Input.Text",
      "id": "eventName",
      "placeholder": "Enter event name"
    },
    {
      "type": "TextBlock",
      "text": "Event Description:",
      "weight": "Bolder"
    },
    {
      "type": "Input.Text",
      "id": "eventDesc",
      "placeholder": "Enter event description",
      "isMultiline": true
    },
    {
      "type": "TextBlock",
      "text": "Event Location:",
      "weight": "Bolder"
    },
    {
      "type": "Input.Text",
      "id": "eventLocation",
      "placeholder": "Enter event location"
    },
    {
      "type": "TextBlock",
      "text": "Organizer:",
      "weight": "Bolder"
    },
    {
      "type": "Input.Text",
      "id": "organizer",
      "placeholder": "Enter organizer name"
    },
    {
      "type": "TextBlock",
      "text": "Event Date:",
      "weight": "Bolder"
    },
    {
      "type": "Input.Date",
      "id": "eventDate"
    },
    {
      "type": "TextBlock",
      "text": "Event Image:",
      "weight": "Bolder"
    },
    {
      "type": "Input.Text",
      "id": "imageData",
      "placeholder": "Enter image URL"
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Submit",
      "verb": "eventSubmit",
      "fallback": "Action.Submit"
    }
  ]
}
